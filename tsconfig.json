{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019", "ES6", "DOM", "DOM.Iterable", "ScriptHost"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "pretty": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
