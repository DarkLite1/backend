{
  "name": "graphql-backend",
  "license": "UNLICENSED",
  "version": "0.0.1",
  "devDependencies": {
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/passport": "^1.0.6",
    "@types/passport-azure-ad": "^4.3.0",
    "env-cmd": "^10.1.0",
    "faker": "^5.5.3",
    "graphql-request": "^3.4.0",
    "jest": "^27.0.1",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.13.0",
    "apollo-server-express": "^2.24.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "mssql": "^7.1.0",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.3.0",
    "reflect-metadata": "^0.1.10",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "ts-node --transpile-only src/index.ts",
    "prod": "env-cmd -e prod ts-node --transpile-only src/index.ts",
    "dev": "env-cmd -e dev ts-node-dev --no-notify --log-error --respawn src/index.ts",
    "sapQA": "env-cmd -e dev,sapQA ts-node-dev --no-notify --log-error --respawn src/index.ts",
    "test": "env-cmd -e dev jest --runInBand",
    "test-watch": "env-cmd -e dev jest --coverage --watchAll",
    "view-coverage": "serve coverage/lcov-report",
    "typeorm-migration-generate": "env-cmd -e dev ts-node ./node_modules/typeorm/cli.js migration:generate",
    "typeorm-migration-run": "env-cmd -e dev ts-node ./node_modules/typeorm/cli.js migration:run",
    "typeorm-migration-run-prod": "env-cmd -e prod ts-node ./node_modules/typeorm/cli.js migration:run",
    "typeorm-migration-revert": "env-cmd -e dev ts-node ./node_modules/typeorm/cli.js migration:revert",
    "typeorm-migration-show": "env-cmd -e dev ts-node ./node_modules/typeorm/cli.js migration:show"
  }
}
